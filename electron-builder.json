{
  "appId": "com.quickapiclient.desktop",
  "productName": "Quick API Client Desktop",
  "files": ["dist/**/*", "package.json"],
  "directories": {
    "output": "release",
    "buildResources": "assets"
  },
  "compression": "normal",
  "publish": {
    "provider": "github",
    "owner": "jomardyan",
    "repo": "APIPO-Simple-API-tester",
    "releaseType": "release",
    "timeout": 600000,
    "publishAutoUpdate": true
  },
  "mac": {
    "category": "public.app-category.developer-tools",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "darkModeSupport": true,
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": null,
    "entitlementsInherit": null
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      },
      {
        "target": "msix",
        "arch": ["x64", "arm64"]
      }
    ],
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "msix": {
    "displayName": "Quick API Client Desktop",
    "publisher": "CN=YourPublisherName",
    "identityName": "com.quickapiclient.desktop",
    "assets": "assets"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "category": "Development",
    "maintainer": "Quick API Client Team",
    "description": "Quick API Client - A cross-platform API testing tool",
    "desktop": {
      "entry": {
        "Name": "Quick API Client",
        "Type": "Application",
        "Categories": "Development;Utility;"
      }
    }
  },
  "fileAssociations": [
    {
      "ext": "json",
      "name": "API Request Collection",
      "description": "Quick API Client Collection File",
      "role": "Editor"
    }
  ]
}
